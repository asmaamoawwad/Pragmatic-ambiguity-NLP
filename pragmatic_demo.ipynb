:root {
    /* Color Palette */
    --primary-color: #1a365d;
    /* Navy Blue */
    --secondary-color: #2b6cb0;
    /* Lighter Blue */
    --accent-color: #c53030;
    /* Academic Red */
    --bg-color: #f7fafc;
    /* Very Light Gray/Blue */
    --card-bg: #ffffff;
    --text-color: #2d3748;
    --text-light: #718096;
    --border-radius: 8px;
    --shadow: 0 4px 6px -1px rgba(0,
    0,
    0,
    0.1),
    0 2px 4px -1px rgba(0,
    0,
    0,
    0.06);
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Inter', sans-serif;
    background-color: #e2e8f0;
    color: var(--text-color);
    line-height: 1.6;
    padding: 20px;
}

.poster-container {
    max-width: 1400px;
    margin: 0 auto;
    background-color: var(--bg-color);
    padding: 20px;
    box-shadow: 0 10px 25px -5px rgba(0,
    0,
    0,
    0.1),
    0 10px 10px -5px rgba(0,
    0,
    0,
    0.04);
    min-height: 90vh;
}
/* Header Styles */
.poster-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    padding: 30px;
    border-radius: var(--border-radius);
    margin-bottom: 25px;
    text-align: center;
}

.logo-area {
    flex: 0 0 100px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.logo-placeholder,
.qr-placeholder {
    width: 80px;
    height: 80px;
    background-color: rgba(255,
    255,
    255,
    0.2);
    border-radius: 50%;
    /* Circle for QR/Logo */
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    font-size: 0.8rem;
    color: rgba(255,
    255,
    255,
    0.8);
}

.title-area {
    flex: 1;
    padding: 0 20px;
}

.title-area h1 {
    font-family: 'Merriweather', serif;
    font-size: 2.5rem;
    margin-bottom: 10px;
    line-height: 1.2;
}

.authors {
    font-size: 1.1rem;
    margin-bottom: 5px;
}

.affiliations {
    font-size: 0.9rem;
    opacity: 0.9;
}
/* Grid Layout */
.poster-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr 1fr;
    /* Middle column slightly wider */
    gap: 25px;
    align-items: start;
}

.column {
    display: flex;
    flex-direction: column;
    gap: 25px;
}
/* Card Styles */
.card {
    background-color: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 20px;
    box-shadow: var(--shadow);
    border-top: 5px solid var(--secondary-color);
}

.card h2 {
    color: var(--primary-color);
    border-bottom: 2px solid #e2e8f0;
    padding-bottom: 10px;
    margin-bottom: 15px;
    font-family: 'Merriweather', serif;
    font-size: 1.4rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.highlight-card {
    border-top-color: var(--accent-color);
    background-color: #fffaf0;
    /* Slight tint for results */
}
/* Placeholders */
.figure-placeholder,
.chart-box {
    background-color: #edf2f7;
    border: 2px dashed #cbd5e0;
    border-radius: var(--border-radius);
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--text-light);
    font-style: italic;
    margin-top: 15px;
}

.figure-placeholder {
    height: 150px;
}

.charts-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
}

.chart-box {
    height: 150px;
}
/* References Section */
.references ol {
    margin-left: 20px;
    font-size: 0.85rem;
    color: var(--text-light);
}

.references li {
    margin-bottom: 5px;
}
/* Responsive Design */
@media (max-width: 1024px) {
    .poster-grid {
        grid-template-columns: 1fr 1fr;
    }

    .col-3 {
        grid-column: span 2;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
    }
}

@media (max-width: 768px) {
    .poster-header {
        flex-direction: column;
        gap: 15px;
    }

    .poster-grid {
        display: flex;
        /* Fallback / Stack */
        flex-direction: column;
    }

    .col-3 {
        display: flex;
        flex-direction: column;
    }

    .title-area h1 {
        font-size: 1.8rem;
    }
}
/* Diagram Styles */
.diagram-container {
    text-align: center;
    background-color: white;
    padding: 10px;
    border-radius: 4px;
    border: 1px solid #e2e8f0;
}

.caption {
    font-size: 0.8rem;
    color: var(--text-light);
    margin-top: 5px;
    font-style: italic;
    text-align: center;
}
/* CSS Bar Chart */
.bar-chart {
    display: flex;
    justify-content: space-around;
    align-items: flex-end;
    height: 80%;
    /* Leave space for caption */
    width: 100%;
    padding: 10px;
    border-bottom: 2px solid #cbd5e0;
    border-left: 2px solid #cbd5e0;
    margin-bottom: 5px;
}

.bar {
    width: 25%;
    background-color: var(--secondary-color);
    border-radius: 4px 4px 0 0;
    position: relative;
    transition: height 0.3s ease;
}

.bar span {
    position: absolute;
    bottom: -25px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.8rem;
    font-weight: bold;
    color: var(--text-color);
}

.chart-box {
    background-color: white;
    border: 1px solid #e2e8f0;
    border-radius: var(--border-radius);
    padding: 10px;
    height: 180px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}